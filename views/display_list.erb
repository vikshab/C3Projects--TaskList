<form action="<%= post_url %>" method="post" accept-charset="utf-8">
  <% @all_tasks.each_with_index do |task, index| %>

    <div <%= "class='completed'" unless task[3].nil? %> >
      <label class="task">
        <input type="checkbox" name="<%= action+"[]" %>" value="<%= task[0] %>">
        <%= index + 1 %>. <%= task[1] %>
      </label>
      <p class="task_descr"> - <%= task[2] %></p>
    </div>

  <% end %>
  <input class="button" type="submit" value="<%= action.capitalize %>">
</form>
